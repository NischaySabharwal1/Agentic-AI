{
  "manifest_version": 3,
  "name": "SimplifAI",
  "version": "1.0",
  "description": "Simplify and translate selected text using local LLM or external APIs.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:8000/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "background": {
    "service_worker": "dist/service_worker_bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
